{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/mcp-server": {
      "entry": ["src/server.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/extension": {
      "entry": [
        "src/background/service-worker.ts",
        "src/background/websocket-client.ts"
      ],
      "project": ["src/**/*.ts"]
    },
    "packages/shared": {
      "entry": ["src/**/*.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/dist/**", "scripts/**"],
  "ignoreExportsUsedInFile": true,
  "rules": {
    "exports": "warn",
    "types": "warn"
  }
}
